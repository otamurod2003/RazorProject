@page "{id:int}"
@using Tracking.Extensions;
@model Tracking.Pages.Issues.DetailModel
@{
}
<div class="mt-5">
    @if (Model.Issue == null)
    {
        <p class="alert alert-warning" role="alert">No displays yet</p>
    } else
    {
       <div >
           <h3>@Model.Issue.Title</h3>
           <div class="mb-2">
               <span class="badge bg-info">
                   @Model.Issue.Issuetype 
               </span>
               <span class="@Model.Issue.Priorities.ToCssClass()" badge bg-info>
                   @Model.Issue.Priorities
               </span>
               <span class="badge bg-info">
                       @Model.Issue.Created
               </span>
           </div>
           <p>@Model.Issue.Description</p>

                   <button class="btn" asp-area=""  asp-page="/Index">Back</button>
       </div> 
    }
</div>
